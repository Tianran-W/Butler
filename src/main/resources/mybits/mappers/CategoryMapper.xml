<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.inventory.category.mapper.CategoryMapper">
    <resultMap id="CategoryResultMap" type="com.example.inventory.category.entity.Category">
        <id property="id" column="category_id"/>
        <result property="name" column="category_name"/>
    </resultMap>
    <select id="findById" resultMap="CategoryResultMap">
        SELECT category_id, category_name FROM tb_material_category WHERE category_id = #{id}
    </select>
    <select id="findAll" resultMap="CategoryResultMap">
        SELECT category_id, category_name FROM tb_material_category
    </select>
    <insert id="insertCategory" useGeneratedKeys="true" keyProperty="id" keyColumn="category_id">
        INSERT INTO tb_material_category (category_name)
        VALUES (#{name})
    </insert>
</mapper>